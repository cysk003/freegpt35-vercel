{
  "version": 2,
  "regions": ["sfo1"],
  "rewrites": [
    {
      "source": "/v1/chat/completions",
      "destination": "/api/index"
    },
    {
      "source": "/",
      "destination": "/api/guide"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "*/4 * * * *"
    }
  ],
  "functions": {
    "api/**/*": {
      "memory": 3009,
      "maxDuration": 300
    }
  }
}
